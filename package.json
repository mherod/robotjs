{
  "name": "@mherod/robotjs",
  "version": "0.7.0",
  "description": "Node.js Desktop Automation with Rust bindings.",
  "main": "index.js",
  "typings": "index.d.ts",
  "scripts": {
    "test": "run-script-os",
    "test:darwin:linux": "jasmine test/**/*.js",
    "test-keyboard": "node test/keyboard.js",
    "test:win32": "jasmine test/**/*.js",
    "install": "npm run build",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "test:rust": "cargo test",
    "test:vitest": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mherod/robotjs.git"
  },
  "keywords": [
    "Automation",
    "GUI",
    "mouse",
    "keyboard",
    "screenshot",
    "image",
    "pixel",
    "desktop",
    "robotjs",
    "screen",
    "recognition",
    "autohotkey",
    "machine",
    "learning",
    "color",
    "rust"
  ],
  "author": "Matthew Herod",
  "contributors": [
    "Jason Stallings"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mherod/robotjs/issues"
  },
  "homepage": "https://github.com/mherod/robotjs",
  "dependencies": {
    "@napi-rs/cli": "^2.16.3"
  },
  "devDependencies": {
    "jasmine": "^2.99.0",
    "run-script-os": "^1.0.3",
    "tape": "^4.8.0",
    "vitest": "^2.1.1"
  },
  "engines": {
    "node": ">=14"
