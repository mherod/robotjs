[package]
name = "robotjs"
version = "0.6.0"
edition = "2021"

[lib]
crate-type = ["cdylib"]

[dependencies]
napi = { version = "2.12.2", features = ["napi4"] }
napi-derive = "2.12.2"
enigo = "0.1.0"
screenshots = "0.5.0"
image = "0.24.0"

[build-dependencies]
napi-build = "2.0.1"

[profile.release]
lto = true-e 
[dev-dependencies]
napi = { version = "2.12.0", features = ["async"] }
